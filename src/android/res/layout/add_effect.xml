<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:paddingBottom="8sp">
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="36sp"
		android:typeface="sans"
		android:gravity="center_horizontal"
		android:text="@string/add"
		android:textColor="#111111" />
	<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="4sp">
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:paddingRight="8sp">
			<TableLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="1">
				<TableRow>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text=""
						android:textSize="18sp"
						android:textColor="#111111" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:hint="@string/hint_name"
						android:id="@+id/name_edit"
						android:layout_weight="1" />
					<EditText
						android:hint="@string/hint_abbrev"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/abbrev_edit"
						android:layout_weight="1" />

				</TableRow>
				<TableRow>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/label_init"
						android:textSize="18sp"
						android:textColor="#111111" />
					<EditText
						android:hint="@string/hint_init_modifier"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/init_dice_edit"
						android:layout_weight="1" />
					<EditText
						android:hint="@string/hint_init_roll"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/init_roll_edit"
						android:layout_weight="1" />
				</TableRow>
				<TableRow>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/label_hp"
						android:textSize="18sp"
						android:textColor="#111111" />
					<EditText
						android:hint="@string/hint_hit_dice"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/hitdice_edit"
						android:layout_weight="1" />
					<EditText
						android:hint="@string/hint_hit_points"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/hp_edit"
						android:layout_weight="1" />
				</TableRow>
				<TableRow>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/label_sub"
						android:textSize="18sp"
						android:textColor="#111111" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:hint="subdual damage"
						android:id="@+id/subdual_edit"
						android:layout_weight="1" />
				</TableRow>
				<TableRow>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/label_rnds"
						android:textSize="18sp"
						android:textColor="#111111" />
					<EditText
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:hint="@string/hint_rounds_left"
						android:id="@+id/rounds_edit"
						android:layout_weight="1" />
				</TableRow>
			</TableLayout>
			<TextView
				android:text=""
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="12sp"
				android:textColor="#111111" />
			<LinearLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView
					android:text=""
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textColor="#111111" />
				<Button
					android:id="@+id/cancel"
					android:text="@string/cancel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0"
					android:gravity="right"
					android:textColor="#111111" />
				<Button
					android:id="@+id/done"
					android:text="@string/add"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="0"
					android:gravity="right"
					android:textColor="#111111" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
